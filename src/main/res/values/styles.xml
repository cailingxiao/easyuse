<resources>

    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/right_out</item>
    </style>

    <style name="BuiLoading">
        <item name="android:indeterminateDrawable">@drawable/bui_loading</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:maxWidth">50dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:maxHeight">50dp</item>
        <item name="android:indeterminateDuration">800</item>
    </style>

    <style name="CleanupLoading">
        <item name="android:indeterminateDrawable">@drawable/cleanup_loading</item>
        <item name="android:minWidth">1dp</item>
        <item name="android:minHeight">1dp</item>
        <item name="android:maxWidth">250dp</item>
        <item name="android:maxHeight">250dp</item>
        <item name="android:indeterminateDuration">1200</item>
    </style>

    <style name="BuiPressRipple">
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="BuiBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/default_btn</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#fff</item>
    </style>

    <!-- wrap_content样式 -->
    <style name="BuiWrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- math_parent样式 -->
    <style name="BuiMatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="BuiMatchHoriz">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BuiMatchVertical">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="BuiLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#797a7a</item>
    </style>

    <style name="BuiLineLight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#eeeeee</item>
    </style>

    <style name="BuiText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_666666</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BuiPlaceHoriFill">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@null</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="BuiPlaceVertFill">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@null</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="MediaController_SeekBar" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/scrubber_progress_horizontal_holo_dark</item>
        <item name="android:indeterminateDrawable">@drawable/scrubber_progress_horizontal_holo_dark</item>
        <item name="android:minHeight">13dip</item>
        <item name="android:maxHeight">13dip</item>
        <item name="android:thumb">@drawable/scrubber_control_selector_holo</item>
        <item name="android:thumbOffset">16dip</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
    </style>

    <style name="MediaController_Text">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
