<?xml version="1.0" encoding="utf-8"?>

<resources>
    <!-- Base application theme. -->
    <style name="EasyAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="SplashActivityTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- 正式版需要将这个字段换成splash图片 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="NormalActivity" parent="Theme.AppCompat.NoActionBar">

    </style>

    <style name="FullActivityTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- 对话框可以使用的样式 ，构造Dialog时使用 -->
    <style name="BuiDialogTheme" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 全屏 -->
        <item name="android:windowFullscreen">true</item>
        <!-- 默认背景 -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- listview基本style -->
    <style name="BuiListview">
        <item name="android:background">@null</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:groupIndicator">@null</item>
        <item name="android:childDivider">@null</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dip</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:smoothScrollbar">true</item>
        <item name="android:scrollbars">none</item>
    </style>
</resources>